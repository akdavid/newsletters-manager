# Gmail API Configuration
# Create credentials.json files for each Gmail account at Google Cloud Console
# Enable Gmail API and download OAuth2 credentials
GMAIL_CREDENTIALS_PATH_1=/path/to/gmail1_credentials.json
GMAIL_CREDENTIALS_PATH_2=
GMAIL_CREDENTIALS_PATH_3=

# Microsoft Graph API Configuration
# Register app at https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_TENANT_ID=common
OUTLOOK_EMAIL=your_outlook_email@outlook.com

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000

# Database Configuration
DATABASE_URL=sqlite:///newsletters.db

# Scheduling Configuration
DAILY_SUMMARY_TIME=08:00
TIMEZONE=Europe/Paris

# SMTP Configuration for sending summaries
# Use Gmail App Password for SMTP authentication
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SUMMARY_RECIPIENT=recipient@example.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/newsletters.log

# Processing Configuration
MAX_EMAILS_PER_RUN=200
SUMMARY_MAX_NEWSLETTERS=150

# Newsletter Detection Configuration
MIN_CONFIDENCE_SCORE=0.7

# API Rate Limiting (requests per minute)
GMAIL_REQUESTS_PER_MINUTE=100
OUTLOOK_REQUESTS_PER_MINUTE=60
OPENAI_REQUESTS_PER_MINUTE=150

# Pipeline Configuration
PIPELINE_TIMEOUT_SECONDS=300